@model List<PMS.Models.UserDocument>
@{
    ViewBag.Title = "UploadIndex";
    Layout = "~/Views/Shared/_myLayoutPage1.cshtml";
}

<h2>Upload Index</h2>

<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Record Of Files
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>Name</th>
                        <th>Uploaded By</th>
                        <th>Uploaded On</th>

                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>

                </tfoot>
                <tbody>

                    @foreach (var user in Model)    //if we are using view bag methodology then we need to give view bag parametre here its users, if we are using view data methodology then we need to give  vusers parameter, in this loop  insted of Model in both cases
                    {
                        <tr>
                            
                            
                            <td>@user.FileName</td>
                            <td>@user.UploadedBy</td>
                            
                            <td>@user.UploadOn</td>
                            
                            <td>
                                <a href="~/User/DownloadFile/@user.User_id">Download</a> <span>|</span>
                                <a href="~/User/DeleteFile/@user.User_id">Delete</a> <span>|</span>



                            </td>
                        </tr>
                    }

                </tbody>
            </table>


        </div>
    </div>
 </div>

